[include]
    path = .gitconfig.local

[core]
    pager = cat
    editor = vim
    excludesfile = ~/.gitignore
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    # autocrlf = true

[alias]
    # switch = !legit switch \"$@\"
    # branches = !legit branches
    # sprout = !legit sprout \"$@\"
    # unpublish = !legit unpublish \"$@\"
    # harvest = !legit harvest \"$@\"
    # sync = !legit sync \"$@\"
    # publish = !legit publish \"$@\"
    # graft = !legit graft \"$@\"

    gl   = log -10 --color=always --all --graph --topo-order --pretty='format:%Cred%h%Creset %s %C(yellow)%d%Creset%n%C(cyan)(%cr by %cn)%Creset%n'
    gll  = log --color=always --all --graph --topo-order --pretty='format:%Cred%h%Creset %s %C(yellow)%d%Creset%n%C(cyan)(%cr by %cn)%Creset%n'

    ull  = pull
    ll   = pull
    ush  = push
    sh   = push
    st   = status
    ci   = commit
    br   = branch
    co   = checkout
    df   = diff
    dc   = diff --cached
    lg   = log -p
    ls   = ls-files
    ign  = ls-files -o -i --exclude-standard

[branch]
    autosetuprebase = always

[color]
    ui = auto

[push]
    default = upstream
